<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5D3F9"
    tools:context=".TaskFillActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addTaskHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lets add a Task!"
            android:layout_marginTop="50dp"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_ET_task_name"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:hint="Task name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_ET_creatorName"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:hint="Creator name" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_ET_members"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe"
                android:hint="Members" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_ET_date"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/segoe"
                android:hint="Performane date"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_ET_hour"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/segoe"
                android:hint="Performane hour" />
        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:id="@+id/importance"
            android:layout_width="350dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="@font/segoe"
            android:backgroundTint="#234978"
            android:layout_marginTop="15dp"/>




    </LinearLayout>
</LinearLayout>







