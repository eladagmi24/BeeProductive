<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5D3F9"
    android:orientation="vertical"
    tools:context=".TaskDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/segoe"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Edit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/segoe"
            android:textColor="#234978" />
    </LinearLayout>

    <TextView
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Task Name"
        android:fontFamily="@font/segoe"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/creatorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Creator Name"
        android:fontFamily="@font/segoe"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Members"
        android:fontFamily="@font/segoe"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/dateAndHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Date and Hour to perform"
        android:fontFamily="@font/segoe"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:backgroundTint="#B13030"
            android:background="@drawable/ic_baseline_delete_24"
            android:drawableTint="@color/black"/>

        <ImageButton
            android:id="@+id/done"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_done_24"
            android:backgroundTint="#39973D"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/purple_500" />
</LinearLayout>







