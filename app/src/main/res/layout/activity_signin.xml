<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbee"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundbee" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="216dp"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="330dp" />


    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
        android:id="@+id/email_button"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_below="@+id/sign_in_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/fui_sign_in_with_email"
        tools:ignore="UnusedIds" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/bee" />

    <TextView
        android:id="@+id/logo_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/archristy"
        android:text="Bee Productive"
        android:textColor="@color/black"
        android:layout_below="@id/logo"
        android:textSize="40dp"
        android:textStyle="bold" />


</RelativeLayout>
